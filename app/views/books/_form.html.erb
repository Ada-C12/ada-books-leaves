<p>Please provide the following information to <%= verb_name %> your book to our database:</p>

<%= form_with model: @book, class: "book-input" do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%# <%= f.label :read %>
  <%# <%= f.check_box :read %>

  <%= f.submit "#{action_name} Book", class: "book-button" %>

<% end %>
